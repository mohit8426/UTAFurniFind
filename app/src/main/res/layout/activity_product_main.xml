<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Home Text -->
    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/pink_200"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Search Tab -->
    <LinearLayout
        android:id="@+id/searchTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:background="#D2298D9F"
            android:contentDescription="Search Icon"
            android:scaleType="center"
            tools:srcCompat="@android:drawable/arrow_down_float" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search furniture products the categories below"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColorHint="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Categories -->
    <LinearLayout
        android:id="@+id/categoriesContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/searchTab"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- All Furniture Button -->
        <Button
            android:id="@+id/btnAllFurniture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/small_rectangle"
            android:text="All"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:gravity="center" />

        <!-- Table Button -->
        <Button
            android:id="@+id/btnTable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/small_rectangle"
            android:text="Table"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:gravity="center" />

        <!-- Sofa Button -->
        <Button
            android:id="@+id/btnSofa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/small_rectangle"
            android:text="Sofa"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:gravity="center" />

        <!-- Chair Button -->
        <Button
            android:id="@+id/btnChair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/small_rectangle"
            android:text="Chair"
            android:textSize="14sp"
            android:textColor="#ffff"
            android:gravity="center" />
    </LinearLayout>

    <!-- Card Containers for Product Showcase -->


    <LinearLayout

        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesContainer"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- Card 1 -->
        <FrameLayout
            android:id="@+id/card1Container"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <!-- Frame 1 in Card 1 -->
            <ImageView
                android:id="@+id/productImageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix"
                />

            <!-- Text View for Product Name -->


            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>


        <!-- Card 2 -->
        <FrameLayout
            android:id="@+id/card2Container"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix"
                />

            <!-- Text View for Product Name -->


            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/cardContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesContainer"
        android:layout_marginTop="320dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- Card 1 -->
        <FrameLayout
            android:id="@+id/card1Container1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <!-- Frame 1 in Card 1 -->

            <ImageView
                android:id="@+id/productImageView2"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix" />
            <!-- Text View for Product Name -->


            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>


        <!-- Card 2 -->
        <FrameLayout
            android:id="@+id/card2Container1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">



            <!-- Text View for Product Name -->
            <ImageView
                android:id="@+id/productImageView3"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix" />

            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/cardContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoriesContainer"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <!-- Card 1 -->
        <FrameLayout
            android:id="@+id/card1Container2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <!-- Frame 1 in Card 1 -->
            <ImageView
                android:id="@+id/productImageView4"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix" />

            <!-- Text View for Product Name -->


            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>


        <!-- Card 2 -->
        <FrameLayout
            android:id="@+id/card2Container2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/productImageView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_image_bg"
                android:contentDescription="Image 1"
                android:scaleType="matrix"
                />

            <!-- Text View for Product Name -->


            <!-- Text View for Product Description -->
            <TextView
                android:id="@+id/productDescTextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:background="#80000000"
                android:text="Product Description"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </FrameLayout>
    </LinearLayout>


    <!-- Card Containers for Product Showcase -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="670dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />



        <ImageView
            android:id="@+id/cartImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cart"
            android:contentDescription="Cart"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/yourImageViewId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/person"
            android:contentDescription="Search"
            android:scaleType="fitCenter"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>
